{
    "compilerOptions": {
      "outDir": "./",
      "rootDir": "./",
      "allowJs": true,
      "target": "ES6",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "strict": false,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "noEmitOnError": false,
    },
    "include": ["**/*.ts", "public/**/*.ts"], 
    "exclude": ["node_modules"]
}

